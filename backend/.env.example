# ============================================
# DATABASE (PostgreSQL)
# ============================================
# Local PostgreSQL
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/healthcare_db

# PostgreSQL (production)
# DATABASE_URL=postgresql://admin:password@postgres-db.example.com:5432/healthcare_db

# ============================================
# SECURITY (CRITICAL - Change in Production!)
# ============================================
# Generate: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-super-secret-key-change-in-production-minimum-32-chars

# ============================================
# Supabase Storage (Medical Records)
# ============================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-api-key
SUPABASE_BUCKET=healthcare-records

# ============================================
# OPENAI (AI Features - Embeddings & GPT)
# ============================================
OPENAI_API_KEY=sk-your-openai-api-key-here

# ============================================
# TWILIO (Optional - SMS OTP in Production)
# ============================================
# Uncomment when ready to use Twilio in production
# TWILIO_ACCOUNT_SID=AC...
# TWILIO_AUTH_TOKEN=your-token
# TWILIO_PHONE_NUMBER=+1234567890

# ============================================
# REDIS (Optional - Background Tasks)
# ============================================
REDIS_URL=redis://localhost:6379/0
# Production: redis://username:password@redis-cluster.example.com:6379/0

# ============================================
# LANGCHAIN (Optional - LangChain PoC)
# ============================================
LANGCHAIN_VSTORE_DIR=langchain_vstores

# ============================================
# APPLICATION
# ============================================
APP_ENV=development
APP_PORT=8000
DEBUG=True
LOG_LEVEL=INFO
